<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-4">
    <h3>Write a new post</h3>
    <%= link_to "Write new post", new_post_path %>
  </div>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Your posts</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
